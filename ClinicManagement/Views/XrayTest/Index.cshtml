@{
    ViewBag.Title = "Pneumonia Test (X-ray)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="xray-modern-bg">
    <div class="xray-modern-center">
        <div class="xray-modern-card">
            <div class="text-center mb-4">
                <div class="xray-modern-icon-wrap">
                    <i class="fa fa-x-ray xray-modern-icon"></i>
                </div>
                <h1 class="xray-modern-title">Pneumonia Test <span>(X-ray)</span></h1>
                <p class="xray-modern-desc">Upload your chest X-ray image and instantly check your pneumonia risk with AI.</p>
            </div>
            <div class="xray-info-box mb-4">
                <h5><i class="fa fa-info-circle"></i> What is this test?</h5>
                <ul>
                    <li><b>Pneumonia</b> is a lung infection that can be detected from chest X-ray images.</li>
                    <li>This tool uses artificial intelligence to analyze your X-ray and predict if you have pneumonia.</li>
                    <li><b>How to use?</b> Upload a clear chest X-ray image (JPG/PNG). The system will analyze and show your result below.</li>
                    <li><b>Note:</b> This tool is for informational purposes only. For a medical diagnosis, please consult a healthcare professional.</li>
                </ul>
            </div>
            <form action="@Url.Action("UploadXray", "XrayTest")" method="post" enctype="multipart/form-data" class="mb-4">
                <div class="form-group xray-modern-upload-group">
                    <label for="xrayFile" class="xray-modern-label">Upload X-ray Image</label>
                    <input type="file" name="xrayFile" id="xrayFile" class="form-control xray-modern-input" accept="image/*" required />
                </div>
                <button type="submit" class="btn xray-modern-btn btn-block mt-3">Start Test</button>
            </form>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
            @if (ViewBag.Result != null && ViewBag.Explanation != null)
            {
                <div class="xray-modern-result mt-4 text-center">
                    <h4 class="mb-3">Result:</h4>
                    <span class="badge badge-pill xray-modern-result-badge @(ViewBag.Result == "1" ? "xray-modern-badge-danger" : "xray-modern-badge-success")">
                        @(ViewBag.Explanation == "Pn√∂moni" ? "Pneumonia" : "Healthy")
                    </span>
                    <div class="mt-3">
                        <i class="fa @(ViewBag.Result == "1" ? "fa-exclamation-triangle xray-modern-danger-icon" : "fa-check-circle xray-modern-success-icon") xray-modern-result-icon"></i>
                    </div>
                    <div class="xray-modern-result-info mt-3">
                        @if (ViewBag.Result == "1")
                        {
                            <span class="text-danger"><b>Pneumonia detected.</b> Please consult a healthcare professional for further evaluation.</span>
                        }
                        else
                        {
                            <span class="text-success"><b>No pneumonia detected.</b> If you have symptoms, consult your doctor for confirmation.</span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .xray-modern-bg {
            min-height: 100vh;
            background: linear-gradient(120deg, #22304a 0%, #3a4d6a 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .xray-modern-center {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .xray-modern-card {
            background: #fff;
            border-radius: 32px;
            padding: 2.5rem 2rem 2rem 2rem;
            max-width: 480px;
            width: 100%;
            box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.18);
            margin: 2rem 0;
            transition: box-shadow 0.2s;
        }
        .xray-modern-card:hover {
            box-shadow: 0 20px 60px 0 rgba(31, 38, 135, 0.22);
        }
        .xray-modern-icon-wrap {
            background: linear-gradient(135deg, #22304a 0%, #3a4d6a 100%);
            border-radius: 50%;
            width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem auto;
            box-shadow: 0 4px 16px 0 rgba(34,48,74,0.12);
        }
        .xray-modern-icon {
            font-size: 2.7rem;
            color: #fff;
        }
        .xray-modern-title {
            font-weight: 800;
            color: #22304a;
            margin-bottom: 0.5rem;
            font-size: 2.1rem;
        }
        .xray-modern-title span {
            font-size: 1.1rem;
            font-weight: 400;
            color: #6c757d;
        }
        .xray-modern-desc {
            color: #3a4d6a;
            font-size: 1.08em;
            margin-bottom: 1.7rem;
        }
        .xray-info-box {
            background: #f4f7fb;
            border-left: 5px solid #22304a;
            border-radius: 12px;
            padding: 1.1rem 1.2rem 1rem 1.2rem;
            margin-bottom: 1.5rem;
            color: #22304a;
            font-size: 1em;
        }
        .xray-info-box h5 {
            font-weight: 700;
            margin-bottom: 0.7rem;
            color: #22304a;
        }
        .xray-info-box ul {
            padding-left: 1.2em;
            margin-bottom: 0;
        }
        .xray-info-box li {
            margin-bottom: 0.3em;
        }
        .xray-modern-upload-group {
            margin-bottom: 1.2rem;
        }
        .xray-modern-label {
            font-weight: 600;
            color: #22304a;
            margin-bottom: 0.4rem;
            display: block;
        }
        .xray-modern-input {
            border-radius: 10px;
            border: 1px solid #d1d5db;
            padding: 0.6rem;
            font-size: 1em;
        }
        .xray-modern-btn {
            background: linear-gradient(90deg, #22304a 0%, #3a4d6a 100%);
            color: #fff;
            font-weight: 700;
            border-radius: 10px;
            border: none;
            transition: background 0.2s, box-shadow 0.2s;
            box-shadow: 0 2px 8px 0 rgba(34,48,74,0.10);
            font-size: 1.1em;
            letter-spacing: 0.5px;
        }
        .xray-modern-btn:hover {
            background: linear-gradient(90deg, #3a4d6a 0%, #22304a 100%);
            box-shadow: 0 4px 16px 0 rgba(34,48,74,0.18);
        }
        .xray-modern-result-badge {
            font-size: 1.3em;
            padding: 14px 36px;
            border-radius: 28px;
            font-weight: 700;
            letter-spacing: 1px;
            box-shadow: 0 2px 8px 0 rgba(0,0,0,0.07);
        }
        .xray-modern-badge-danger {
            background: #e74c3c;
            color: #fff;
        }
        .xray-modern-badge-success {
            background: #27ae60;
            color: #fff;
        }
        .xray-modern-result-icon {
            font-size: 2.7em;
            margin-top: 0.7em;
            animation: pop 0.5s;
        }
        .xray-modern-danger-icon { color: #e74c3c; }
        .xray-modern-success-icon { color: #27ae60; }
        .xray-modern-result-info {
            font-size: 1.08em;
            margin-top: 0.7em;
        }
        @@keyframes pop {
            0% { transform: scale(0.7); opacity: 0.2; }
            80% { transform: scale(1.1); opacity: 1; }
            100% { transform: scale(1); }
        }
        @@media (max-width: 600px) {
            .xray-modern-card { padding: 1rem; }
            .xray-modern-title { font-size: 1.3rem; }
        }
    </style>
} 