    @*<h2 style="text-align: center; margin-top: 20px;">Calendar</h2>*@
    <div id="calendar"></div>

    <!-- FullCalendar CSS ve JS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const calendarEl = document.getElementById('calendar');
            if (calendarEl) {
                const calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth', // Ay görünümü
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth,timeGridWeek,timeGridDay'
                    },
                    locale: 'tr',
                    editable: false,
                    dayMaxEvents: true,
                    events: [
                        {
                            title: '',
                            start: '2022-12-25',
                            color: '#'
                        },
                        {
                            title: '',
                            start: '2022-12-28',
                            color: '#'
                        }
                    ]
                });
                calendar.render();
            } else {
                console.error('Takvim öğesi bulunamadı: #calendar');
            }
        });
    </script>

    <style>
        #calendar {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>




